@model Livro
<div class="row justify-content-md-center">
    <form  asp-action="Cadastro"  name="form" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Titulo">Titulo</label>
            <input asp-for="Titulo" class="form-control" id="Titulo" required/>
        </div>
        <div class="form-group">
            <label asp-for="Autor">Autor</label>
            <input asp-for="Autor" class="form-control" id="Autor" required/>
        </div>
        <div>
            <label asp-for="Ano">Ano</label>
            <input asp-for="Ano" id="Ano" required/>
        </div>
        <input type="submit" onclick="return validar()" class="btn btn-primary" id="submit" >
    </form>
</div>
